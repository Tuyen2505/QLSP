@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<WebQLSP.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã khách hàng
        </th>
        <th>
            Tên khách hàng
        </th>
        <th>
            Số điện thoại
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Cus_ID
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cus_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cus_Phone)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Cus_ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.Cus_ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Cus_ID })
            </td>
        </tr>
    }

</table>

