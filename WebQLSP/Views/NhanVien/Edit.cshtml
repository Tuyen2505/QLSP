@model WebQLSP.Models.Employee

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section style="background-color: #eee;">
    <div class="container">

        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <img src="~/Content/assets/images/faces/imguser.png" alt="avatar"
                             class="rounded-circle img-fluid" style="width: 150px;">
                        <h5 class="my-3">@Model.Emp_Name</h5>
                        <p class="text-muted mb-1">@Model.Emp_Phone</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Emp_ID)

                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="">
                                <h4 class="text-muted mb-0">Thay đổi thông tin nhân viên</h4>
                            </div>
                            <hr>
                            <div class="row d-flex align-items-center">
                                <div class="col-sm-4">
                                    <p class="mb-0">Họ tên</p>
                                </div>
                                <div class="col-sm-8">
                                    @Html.EditorFor(model => model.Emp_Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Emp_Phone, "", new { @class = "text-danger" })

                                </div>
                            </div>


                            <hr>
                            <div class="row d-flex align-items-center">
                                <div class="col-sm-4">
                                    <p class="mb-0">Phone</p>
                                </div>
                                <div class="col-sm-8">
                                    @Html.EditorFor(model => model.Emp_Phone, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Emp_Phone, "", new { @class = "text-danger" })

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-outline-primary" />
                        </div>
                    </div>
                </div>
                }
